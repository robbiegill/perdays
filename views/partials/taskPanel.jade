div.row-fluid(ng-repeat='task in tasks | orderBy:statusComparator')
  div.span12.task-box(ng-class='\'pd-\'+task.status')
    button.close(ng-click='deleteTask(task)') &times;
    h2 
      a(ng-href='/tasks/{{task._id}}') {{task.name}}
      small  passed {{task.last_event | timeFromNow}}
    p 
      small [{{task.status}}]
      button.btn-link(ng-click='createTaskEvent(task)') I have {{task.notes}}